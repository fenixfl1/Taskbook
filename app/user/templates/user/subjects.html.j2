{% extends "base.html" %}{% block content %}
{% from 'macro.html' import Form_off_label %}

    <nav class="navbar navbar-light bg-light float-right">

        <form action=" {{url_for('auth.register_subjects')}} " method="POST" autocomplete="off" class="form-inline">
            {{ subject_form.hidden_tag() }}

            {{ Form_off_label(subject_form.name, class="form-control mr-sm-2 col-xs-8", placeholder="Registar Asignaturas", size='30px') }}

            {{ Form_off_label(subject_form.submit, class="btn btn-primary my-2 my-sm-0 col-xs-4", value="Registrar") }}
        </form>
    </nav>

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">
                <div class="row">

                    {# modal for assing teacher to  the Subjects #}
                    <div class="modal fade hide in" id="assingTeacher" tabindex="-1" role="dialog" aria-labelledby="assingTeacher" aria-hidden="false">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-primary">
                                    <h3>
                                        <h3 style="color: white;">Asignar Profesor/a</h3>
                                    </h3>

                                    <a href="/subjects/teachers" class="btn btn-circle" data-dissmis="modal" style="color: white;">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>

                                <div class="modal-body">
                                    <form action=" {{url_for('auth.assing_teacher')}} " method="POST">
                                        {{ form.hidden_tag() }}
                                        <div class="form-group">
                                            {{ Form_off_label(form.subjects.label) }}
                                            {{ Form_off_label(form.subjects, class="form-control") }}
                                        </div>

                                        <div class="form-group">
                                            {{ Form_off_label(form.profe.label) }}
                                            {{ Form_off_label(form.profe, class="form-control") }}
                                        </div>

                                        {{ Form_off_label(form.submit, class="btn form-control btn-primary", value="Asignar") }}
                                    </form>     
                                </div>
                            </div>        
                        </div>
                    </div> 
                    <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header bg-primary">
                                    <h3>
                                        <h3 style="color: white;">Nuevo Profesor/a</h3>
                                    </h3>
                                    <a href="teachers" class="btn btn-circle" data-dissmis="modal" style="color: white;">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>

                                {# modal for register teacher form #}
                                <div class=" modal-body ">
                                    <form action="{{ url_for( 'auth.register_profesor') }}" autocomplete="off" method="POST">
                                        {{ profe_form.hidden_tag() }}
                                        <div class="form-group">
                                            {{ Form_off_label(profe_form.subjects.label) }}
                                            {{ Form_off_label(profe_form.subjects, class="form-control") }}
                                        </div>

                                        <div class="form-group">
                                            {{ Form_off_label(profe_form.name.label) }}
                                            {{ Form_off_label(profe_form.name, class="form-control") }}
                                        </div>

                                        <div class="form-group">
                                            {{ Form_off_label(profe_form.last_name.label) }}
                                            {{ Form_off_label(profe_form.last_name, class="form-control") }}
                                        </div>

                                        <div class="form-group">
                                            {{ Form_off_label(profe_form.email.label) }}
                                            {{ Form_off_label(profe_form.email, class="form-control") }}
                                        </div>

                                        <div class="form-group">
                                            {{ Form_off_label(profe_form.phone.label) }}
                                            {{ Form_off_label(profe_form.phone, class="form-control") }}
                                        </div>

                                        {{ Form_off_label(profe_form.submit, class="form-control btn btn-primary") }}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="table-responsive">
                        <div class="col-md-5">
                            {% include 'messages.html' %}
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a href="/subjects/" class="nav-link active">Materias({{ num_subjects }}) </a>
                                </li>
                                
                                <li class="nav-item">
                                    <a href="/subjects/finished" class="nav-link">
                                        Cursadas(0)
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/subjects/teachers" class="nav-link">
                                        Profesores({{ 3 }})
                                    </a>
                                </li>
                            </ul>
                            <table class="table table-striped table-bordered table-hover model-list p-3 mb-5 bg-white rounded" id="mytable">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="text-primary column-header cursor" onclick="sortTable(0)">Asignatura</th>
                                        <th class="text-primary column-header cursor" onclick="sortTable(1)">Profesor</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                    
                                <tbody>
                                    {% for i in range(num_subjects)  %}
                                        <tr>
                                            <td class="list-buttons-column">
                                                <a href="#" class="btn-outline text-success my-2 my-ms-0">
                                                    <span class="fas fa-check glyphicon glyphicon-check"></span>
                                                </a>
                                                <a href=" {{ url_for('auth.delete', id=subjects_user[i].id) }} " class="btn-outline text-danger my-2 my-sm-0" onclick="try_delete()">
                                                    <span title="Delete" class="fa fa-trash glyphicon glyphicon-trash"></span>
                                                </a>
                                            </td>
                                            <td> {{ subjects_user[i].name }} </td>
                                            <td>
                                                {% if subjects_user[i].profesor | length > 0 %}
                                                    {{ subjects_user[i].profesor[0] }}
                                                {% else %}
                                                    <a class="nav-link cursor" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                        Asignar
                                                    </a>
                                                    <div class="dropdown-menu">
                                                        <a href="#" data-toggle="modal" data-target="#staticBackdrop" class="dropdown-item cursor">Nuevo</a>
                                                        <a href="#" data-toggle="modal" data-target="#assingTeacher" class="dropdown-item dropright cursor" >Existente</a>
                                                    </div>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ url_for('auth.edit', id=subjects_user[i].id) }}" class="btn-outline text-info my-2 my-sm-0">
                                                    <span title="Edit" class="fas fa-pencil-alt glyphicon glyphicon-pencil"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock  %}