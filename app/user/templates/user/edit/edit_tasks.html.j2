{% extends "base.html" %} {% from "macro.html" import Form_off_label %} 
{% block content %}
	<div id="content-wrapper" class="d-flex flex-column">
	    <div id="content">
	        <div class="container-fluid">

	        	<ol class="breadcrumb">
	                <li class="breadcrumb-item active">
	                    <a href="/tasks">Tareas({{ num_task }})</a>
	                </li>

	                <li class="breadcrumb-item">
	                    Editar
	                </li>
	            </ol>

	            <div class="row m-auto" style="height: 77vh;">
	            	<div class="col-md-6 m-auto">
	            		<form action="edit_tasks_submit" method="POST" class="card card-body">
	            			{{ task_form.hidden_tag() }}

	            			<div class="form-group">
	                            <label for="name ">Nombre 
	                                <strong style="color: red; ">*</strong>
	                            </label>
	                            {{ Form_off_label(task_form.name, class="form-control",
	                            value=edit_data.name) }}
	                        </div>

	                        <div class="form-group">
	                            <label for="materia ">Asignatura 
	                                <strong style="color: red; ">*</strong>
	                            </label>
	                            {{ Form_off_label(task_form.materia, class="form-control") }}
	                        </div>

	                        <div class="form-row">
	                            <div class="form-group col-md-6">
	                                <label for="asignada_en ">Fecha de Asignacion 
	                                    <strong style="color: red; ">*</strong>
	                                </label>
	                                {{ Form_off_label(task_form.asignada_en, class="form-control",
	                                value=edit_data.asignada_en) }}
	                            </div>

	                            <div class="form-group col-md-6">
	                                <label for="dia_entrega ">Fecha de Entrega 
	                                    <strong style="color: red; ">*</strong>
	                                </label>
	                                {{ Form_off_label(task_form.dia_entrega, class="form-control",
	                                value=edit_data.dia_entrega) }}
	                            </div>
	                        </div>

	                        <div class="form-group">
	                            {{ Form_off_label(task_form.nota.label) }}
	                            {{ Form_off_label(task_form.nota, class="form-control", 
	                            id="exampleFormControlTextarea1", rows="3", value=edit_data.nota) }}
	                        </div>

	                        <div class="text-center form-group">
	                            {{Form_off_label(task_form.submit, class="btn btn-primary btn-lg", value="Guardar")}}
	                        </div>
	            		</form>
	            	</div>
	            </div>
	        </div>
	    </div>
	</div>
{% endblock %}