{% extends "base.html" %} {% from "macro.html" import Form_off_label as form %} {% block content %}
<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">

            <ol class="breadcrumb" aria-label="breadcrumb">
                <li class="breadcrumb-item active">
                    <a href="/subjects/"> Materias({{ subject | subjects(1) }})</a>
                </li>

                <li class="breadcrumb-item">
                    Edición
                </li>
            </ol>

            <div class="row m-auto" style="height: 60vh;">
                <div class="col-md-6 m-auto">
                    <form action=" {{url_for('auth.update_subjects', id=edit_data.id)}} " method="POST" class="card card-body">
                        <h3 class="m-auto my-5">
                            <h3 class="m-auto text-primary">Editar información.</h3>
                        </h3>
                        {{ subject_form.hidden_tag() }}
                        <div class="form-group">
                            {{ form(subject_form.name, class="form-control form-control-lg", value=edit_data.name) }}
                        </div>

                        <div class="text-center form-group">
                            {{ form(subject_form.submit, class="btn btn-primary btn-lg", value="Actualizar") }}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}