{% extends 'base.html' %} {% from 'macro.html' import Form, Form_off_label %} 
{% block content %}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- modal for register new events -->
                <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-gradient-primary">
                                <h3>
                                    <h3 style="color: white;">New Event</h3>
                                </h3>
                                <a href="/events" class="btn btn-circle" data-dissmis="modal" style="color: white;">X</a>
                            </div>

                            <div class=" modal-body ">
                                <form action="{{ url_for( 'auth.register_event') }} " method="POST " class="admin-form form-horizontal ">
                                    <fieldset>
                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="name ">Nombre 
                                                    <strong style="color: red; ">*</strong>
                                                </label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.name, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="lugar ">Lugar 
                                                    <strong style="color: red; ">*</strong>
                                                </label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.lugar, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="dia ">Dia 
                                                    <strong style="color: red; ">*</strong>
                                                </label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.dia, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="hora_inicio ">Hora de inicio 
                                                    <strong style="color: red; ">*</strong>
                                                </label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.hora_inicio, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="hora_fin ">Hora limite 
                                                    <strong style="color: red; ">*</strong>
                                                </label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.hora_fin, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="control-group ">
                                            <div class="control-label ">
                                                <label for="nota ">Nota</label>
                                            </div>
                                            <div class="controls ">
                                                <div class="from-control ">
                                                    {{ Form_off_label(event_form.nota, class='form-control') }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <div class="controls ">
                                                {{ Form_off_label(event_form.submit, class='btn btn-primary', value='Guardar') }}
                                                <a href="/events " class="btn btn-danger " data-dissmis="modal ">Cancelar</a>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                {# content page #}
                {% include 'messages.html' %}
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="/subjects/" class="nav-link">Materias({{ num_subjects }}) </a>
                    </li>
                                
                    <li class="nav-item">
                        <a href="/subjects/finished" class="nav-link">
                            Cursadas(0)
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/subjects/teachers" class="nav-link active">
                            Profesores({{ 3 }})
                        </a>
                    </li>
                </ul>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover model-list p-3 mb-5 bg-white rounded" id="mytable">
                        <thead>
                            <tr>
                                <th class=""></th>
                                <th class="text-primary column-header">Evento</th>
                                <th class="text-primary column-header">ApeLugarllido</th>
                                <th class="text-primary column-header">Dia</th>
                                <th class="text-primary column-header">Nummer de Contacto</th>
                                <th class="text-primary column-header"></th>
                            </tr>
                        </thead>

                        <tbody>
                            {# {% for i in range(num_task) %}
                                <tr>
                                    <td class="list-buttons-column">
                                        <a href="{{ url_for('auth.edit', id=task_user[i].id) }}" class="btn-outline text-info my-2 my-sm-0">
                                            <span title="Edit" class="fas fa-pencil-alt glyphicon glyphicon-pencil"></span>
                                        </a>

                                        <a href=" {{ url_for('auth.delete', id=task_user[i].id) }} " class="btn-outline text-danger my-2 my-sm-0" onclick="try_delete()">
                                            <span title="Delete" class="fa fa-trash glyphicon glyphicon-trash"></span>
                                        </a>
                                    </td>
                                    <th>{{task_user[i].name}}</th>
                                    <td>{{task_user[i].detalle[0].materia['name'] }}</td>
                                    <td>{{task_user[i].detalle[0].asignada_en}}</td>
                                    <td>{{task_user[i].detalle[0].dia_endrega}}</td>
                                    <td>{{task_user[i].detalle[0].comentario}}</td>
                                </tr>
                            {% endfor %} #}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}