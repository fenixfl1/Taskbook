{% extends "base.html" %}{% block content %}
{% from 'macro.html' import Form_off_label %}
    <nav class="navbar navbar-light shadow-none">
        <a title="Agregar Profesor/a" href="" class="btn btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">
            Agregar
        </a>
        <form class="form-inline">
            <input type="search" class="form-control" id="search" placeholder="Buscar Profesores" aria-label="Search" onkeyup="myFunction()" size='40'>
        </form>
    </nav>

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">

                {% include 'messages.html' %}

                {% include "forms/teacher_form.html.j2" %}

                <ul class="breadcrumb">
                    <li class="breadcrumb-item active">
                        <a href="/subjects/" class="">Materias({{ num_subjects }}) </a>
                    </li>
                                
                    <li class="breadcrumb-item">
                        <a href="/subjects/finished" class="">
                            Cursadas({{ num_completed }})
                        </a>
                    </li>

                    <li class="breadcrumb-item">
                        Profesores({{ num_teacher }})
                    </li>
                </ul>

                {% if num_teacher > 0 %}
                    <div class="row m-auto">

                        <div class="table-responsive">

                            <table class="table table-striped table-borderless table-hover bg-white rounded-lg" id="mytable">
                                <thead>
                                    <tr>
                                        <th scope="col" class=""></th>
                                        <th scope="col" class="text-primary column-header">Nombre</th>
                                        <th scope="col" class="text-primary column-header">Apellido</th>
                                        <th scope="col" class="text-primary column-header">Email</th>
                                        <th scope="col" class="text-primary column-header">Nummer de Contacto</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    {% for i in range(num_teacher) %}
                                        <tr>
                                            <td scope="row" class="list-buttons-column">
                                                <a href=" {{ url_for('users.edit_teachers', id=teachers[i].id) }} " class="btn shadow-none btn-outlne text-info my-sm-0">
                                                    <span title="Editar informacion" class="fas fa-pencil-alt glyphicon glyphicon-pencil"></span>
                                                </a>

                                                <a href="{{ url_for('auth.delete_teachers', id=teachers[i].id) }}" class="btn btn-delete shadow-none btn-outlie text-danger my-sm-0">
                                                    <span title="Eliminar" class="fa fa-trash glyphicon glyphicon-trash"></span>
                                                </a>
                                            </td>
                                            <th>{{teachers[i].name }}</th>
                                            <td>{{teachers[i].last_name }}</td>
                                            <td><a href="#">{{teachers[i].email }}</a></td>
                                            <td>{{teachers[i].phone_number }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}