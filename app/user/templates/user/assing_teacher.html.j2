{% extends 'base.html' %}
{% block content %}

	<div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">

                <div class="row m-auto" style="height: 60vh;">
                	<div class="col-md-6 m-auto">
		                <form action=" {{url_for('auth.assing_teacher', id=edit_data.id)}} " method="POST" class="card card-body">
		                    {{ form.hidden_tag() }}
		                    <div class="form-group">
		                        {{ Form_off_label(form.subjects.label) }} 
		                        {{ Form_off_label(form.subjects, class="form-control form-control-lg", value=edit_data.name) }}
		                    </div>

		                    <div class="form-group">
		                        {{ Form_off_label(form.profe.label) }} 
		                        {{ Form_off_label(form.profe, class="form-control form-control-lg") }}
		                    </div>

		                    <div class="text-center form-group">
		                        {{ Form_off_label(form.submit, class="btn btn-primary btn-lg", value="Asignar") }}
		                    </div>
		                </form>
		            </div>
	            </div>
            </div>
        </div>
    </div>
{% endblock %}