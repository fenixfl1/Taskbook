{% extends 'base.html' %} {% block content %} {% from 'macro.html' import Form, Form_off_label %}

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">
            {% include 'messages.html' %}

            <div class="row">
                <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h3>
                                    <h3 style="color: white;">Nueva Tarea</h3>
                                </h3>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal" style="color: white;">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>

                            <div class=" modal-body ">
                                {% include "forms/task_form.html.j2" %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Nav for task table #}
            <nav class="navbar navbar-light bg-light float-right">
                <form class="form-inline">
                    <input type="search" class="form-control mr-sm-2" id="search" placeholder="Buscar Tareas" aria-label="Search" onkeyup="myFunction()" size='30'>
                </form>
            </nav>

            {# visualize each task #}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover model-list p-3 mb-5 bg-white rounded" id="mytable">
                    <ul class="nav nav-tabs">
                        <li class="nav-itembtn">
                            <a href="/tasks" class="nav-link active">Tareas({{ num_task }}) </a>
                        </li>
                        {% if num_task != 0 %}
                            <li class="nav-item dropdown">
                                <a class="nav-link cursor" dropdown-toggle data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    Ordenar <i class="fas fa-sort-down"></i>
                                </a>
                                <div class="dropdown-menu">
                                    <div class="form-check">
                                        <p class="dropdown-item cursor" onclick="sortTable(0)">Nombre</p>
                                        <p class="dropdown-item cursor" onclick="sortTable(1)">Asignatura</p>
                                        {# <p class="dropdown-item cursor" onclick="sortTable(2)">Fecha de Asignaci√≥n</p> #}
                                        <p class="dropdown-item cursor" onclick="sortTable(2)">Fecha de Entrega</p>
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link cursor" data-toggle="modal" data-target="#staticBackdrop">
                                Crear
                            </a>
                        </li>
                    </ul>
                    <thead>
                        <tr>
                            <th class="th"></th>
                            <th class="text-primary column-header">Nombre de la Tarea</th>
                            <th class="text-primary column-header">Asignatura</th>
                            {# <th class="text-primary column-header">Fecha de Asignacion</th> #}
                            <th class="text-primary column-header">Fecha de Entrega</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for i in range(num_task) %}
                            {% if task_user[i].estado == true %}
                                <tr>
                                    <td class="list-buttons-column">
                                        <div class="col-auto">
                                            <a href="{{ url_for('auth.edit', id=task_user[i].id) }}" class="btn-outline text-info my-2 my-sm-0">
                                                <span title="Edit" class="fas fa-pencil-alt glyphicon glyphicon-pencil"></span>
                                            </a>

                                            <a href=" {{ url_for('auth.delete', id=task_user[i].id) }} " class="btn-outline text-danger my-2 my-sm-0" onclick="try_delete()">
                                                <span title="Delete" class="fa fa-trash glyphicon glyphicon-trash"></span>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <a href=" {{url_for('users.details_task', id=task_user[i].id)}} " style="cursor: pointer;">{{task_user[i].name}}</a>
                                    </th>
                                    <td>{{task_user[i].detalle[0].materia['name'] }}</td>
                                    {# <td>{{task_user[i].detalle[0].asignada_en}}</td> #}
                                    <td>{{task_user[i].detalle[0].dia_endrega}}</td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}