{% extends 'base.html' %} {% block content %} {% from 'macro.html' import Form, Form_off_label %}

{# Nav for task table #}
<nav class="navbar navbar-light bg-light">
    <a title="Crear tareas" href="" class="btn mx-2 btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">
        Crear
    </a>
    <form class="form-inline">
        <input type="search" class="form-control mr-sm-2" id="search" placeholder="Buscar Tareas" aria-label="Search" onkeyup="myFunction()" size='30'>
    </form>
</nav>

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">
            {% include 'messages.html' %}
            <div class="row">
                <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h3 class="m-auto">
                                    <h3 class="m-auto text-white">Nueva Tarea</h3>
                                </h3>
                                <button type="button" class="close btn btn-sm text-white" data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class=" modal-body ">
                                {% include "forms/task_form.html.j2" %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    Tareas({{ num_task }})
                </li>

                <li class="breadcrumb-item">
                    <a href=""> Realizadas(0)</a>
                </li>
            </ol>

            {# visualize each task #}
            <div class="row m-auto margenes bg-white">
                <div class="table-responsive">

                    <table class="table table-striped table-borderless table-hover model-list bg-white rounded-lg" id="mytable">

                        <thead>
                            <tr>
                                <th></th>
                                <th class="text-primary column-header cursor" onclick="sortTable(0)">Nombre de la Tarea</th>
                                <th class="text-primary column-header cursor" onclick="sortTable(1)">Asignatura</th>
                                <th class="text-primary column-header cursor" onclick="sortTable(2)">Fecha de Entrega</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for i in range(num_task) %} {% if task_user[i].estado == true %}
                            <tr>
                                <td class="list-buttons-column">
                                    <div class="col-auto">
                                        <a href="{{ url_for('auth.edit', id=task_user[i].id) }}" class="btn-outline text-info m-2 my-sm-0">
                                            <span title="Editar" class="fas fa-pencil-alt glyphicon glyphicon-pencil"></span>
                                        </a>

                                        <a href=" {{ url_for('auth.delete', id=task_user[i].id) }} " class="btn-outline text-danger m-2 my-sm-0" onclick="try_delete()">
                                            <span title="Eliminar" class="fa fa-trash glyphicon glyphicon-trash"></span>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <a href=" {{url_for('users.details_task', id=task_user[i].id)}} " style="cursor: pointer;">{{task_user[i].name}}</a>
                                </td>
                                <td>{{task_user[i].detalle[0].materia['name'] }}</td>
                                <td>{{task_user[i].detalle[0].dia_endrega}}</td>
                                <td>
                                    <a href="#" class="btn-outline text-success my-2 my-ms-0">
                                        <span title="Marcar como realizada" class="fas fa-check glyphicon glyphicon-check"></span>
                                    </a>
                                </td>
                            </tr>
                            {% endif %} {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}