{% extends "base.html" %} {% from 'macro.html' import Form_off_label %}
{% block content %}
<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid">
            {% include 'messages.html' %}

            <div class="row">
                <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h3>
                                    <h3 style="color: white;">Nueva Tarea</h3>
                                </h3>
                                <a href="/tasks" class="btn btn-circle" data-dissmis="modal" style="color: white;">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>

                            <div class=" modal-body ">
                                {% include 'task_form.html' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <ul class="nav nav-tabs">

                <li class="nav-item">
                    <a href="/tasks" class="nav-link">Tareas</a>
                </li>

                <li class="nav-item">
                    <a href="/tasks" class="nav-link active">Detalles</a>
                </li>

                <li class="nav-item">
                    <a href="#" class="nav-link" data-toggle="modal" data-target="#staticBackdrop">
                        Crear
                    </a>
                </li>
            </ul>

            <div class="row">
                <div class="col-xl-8 col-md-8 mb-6">
                    <div class="card shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-6">
                                    <div class="text-xs text-primary text-center font-weight-bold text-segundary text-uppercase mb-1">
                                        <p class="h5">{{details.name}} </p>
                                    </div>

                                    <hr class="sidebar-divider">

                                    <div class="mb-0 font-weight-bold">
                                        <p>Asignatura:  <span>{{ details.detalle[0].materia }}</span></p>

                                        <p>Fecha de Asignaci√≥n:  <span>{{ details.detalle[0].asignada_en }}</span></p>

                                        <p>Dia de Entrega:  <span>{{ details.detalle[0].dia_endrega }}</span></p>

                                        <p>Comentario:  <span>{{ details.detalle[0].comentario }}</span></p>

                                        {% if details.detalle[0].estado == true and details.detalle[0].dia_endrega < hoy %}
                                            <p>Estado:  <span>Fuera de la Fecha de Entrega</span></p>
                                        {% elif details.detalle[0].estado == true and details.detalle[0].dia_endrega > hoy %}
                                            <p>Estado:  <span>Por Entrega</span></p>
                                        {% else %}
                                            <p>Estado:  <span>Entregada</span></p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}
