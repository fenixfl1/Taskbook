{% extends "base.html" %} {% from 'macro.html' import Form_off_label %} {% block content %} {# Nav for task table #}
<nav class="navbar navbar-light shadow-none">
    <a title="Crear tareas" href="" class="btn btn-outline-primary" data-toggle="modal" data-target="#staticBackdrop">
        Crear
    </a>
    <form class="form-inline">
        <input type="search" class="form-control" id="search" placeholder="Buscar Tareas" aria-label="Search" onkeyup="myFunction()" size='40'>
    </form>
</nav>

<div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
        <div class="container-fluid ">
            {% include 'messages.html' %}
            <div class="row mx-auto">
                <div id="staticBackdrop" class="modal fade hide in" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="False">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h3>
                                    <h3 style="color: white;">Nueva Tarea</h3>
                                </h3>
                                <a href="/tasks" class="btn btn-circle" data-dissmis="modal" style="color: white;">
                                    <i class="fas fa-times"></i>
                                </a>
                            </div>

                            <div class=" modal-body ">
                                {% include 'forms/task_form.html.j2' %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <ol class="breadcrumb">
                <li class="breadcrumb-item active">
                    <a href="/tasks">Tareas({{ num_task }})</a>
                </li>

                <li class="breadcrumb-item active">
                    Detalles
                </li>
            </ol>

            <div class="row m-auto margenes">

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover model-list bg-white rounded-lg" id="mytable">

                        <tbody>
                            <tr>
                                <th>Nombre</th>
                                <td class="col-md-7">{{ details.name }}</td>
                            </tr>
                            <tr>
                                <th>Asignatura</th>
                                <td class="col-md-7">{{ details.detalle[0].materia }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de Asignaci√≥n</th>
                                <td class="col-md-7">{{ details.detalle[0].asignada_en }}</td>
                            </tr>
                                                        <tr>
                                <th>Fecha de Entrega</th>
                                <td class="col-md-7">{{ details.detalle[0].dia_endrega }}</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td class="col-md-7">{{ details.detalle[0].comentario }}</td>
                            </tr>
                            <tr>
                                <th>Realizada en</th>
                                <td class="col-md-7">
                                    {% if details.detalle[0].realizada_en == None %}
                                        Aun no a completado la tarea
                                    {% else %}
                                        {{ details.detalle[0].realizada_en }}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Estado</th>
                                <td class="col-md-7">
                                    {% if details.detalle[0].dia_endrega < hoy %}
                                            Fuera de la Fecha de Entrega
                                        {% elif details.detalle[0].dia_endrega > hoy %}
                                            Por Entrega
                                        {% elif details.detalle[0].dia_endrega == hoy %}
                                            Pendiente para Entregar Hoy
                                        {% else %}
                                            Entregada
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}