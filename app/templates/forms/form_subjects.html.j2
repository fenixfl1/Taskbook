<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h3 class="m-auto">
                    <h3 class="modal-title m-auto text-primary" id="exampleModalCenter">Agregar Asignatura</h3>
                </h3>
                <button type="button" class="close btn-sm" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/register-subjects" method="POST" autocomplete="off">
                    {{ subject_form.hidden_tag() }}
                    <div class="form-group my-4">
                        {{ Form_off_label(subject_form.name, class="form-control form-control-lg text-center", placeholder="Asignatura") }}
                    </div>

                    <div class="form-group text-center">
                        <label for="estado" class="btn btn-white btn-sm">Marcar como cursada
                            {{ Form_off_label(subject_form.estado, class="badgebox") }}
                            <span class="badge">&check;</span>
                        </label>
                    </div>

                    <div class="text-center form-group">
                        {{ Form_off_label(subject_form.submit, class="btn btn-primary btn-lg", value="Guardar") }}
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>