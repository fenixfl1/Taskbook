<div class="modal fade" id="assingTeacher" tabindex="-1" role="dialog" aria-labelledby="assingTeacher" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border-bottom: none;">
                <h3 class="m-auto">
                    <h3 class="modal-title m-auto text-primary">Asingnar Profesor/a</h3>
                </h3>
                <button type="button" class="close btn-sm" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <form action=" {{url_for('auth.assing_teacher')}} " method="POST">
                    {{ assign_form.hidden_tag() }}
                    <div class="form-group">
                        {{ Form_off_label(assign_form.subjects.label) }} 
                        {{ Form_off_label(assign_form.subjects, class="form-control form-control-lg") }}
                    </div>

                    <div class="form-group">
                        {{ Form_off_label(assign_form.profe.label) }} 
                        {{ Form_off_label(assign_form.profe, class="form-control form-control-lg") }}
                    </div>

                    <div class="text-center form-group">
                        {{ Form_off_label(assign_form.submit, class="btn btn-primary btn-lg", value="Asignar") }}
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>